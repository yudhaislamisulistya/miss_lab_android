<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_linear_layout"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center|left">

    <LinearLayout
        android:layout_width="50dp"
        android:background="@drawable/circle_avatar"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="goJadwalScreen">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/jadwal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_informasi_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:fontFamily="@font/kanit_bold"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/item_informasi_konten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:fontFamily="@font/kanit_regular"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>